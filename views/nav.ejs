<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  const sidebar = document.querySelector('.sidebar');
  const overlay = document.querySelector('.overlay');
  const navToggle = document.querySelector('.nav-toggle');
  const body = document.body;

  // navigation toggle
  navToggle.addEventListener('click', () => {
    sidebar.classList.add('active');
    overlay.style.display = 'block';
    body.classList.add('nav-open');
  });

  // close nav on click outside
  overlay.addEventListener('click', closeNav);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && sidebar.classList.contains('active')) {
      closeNav();
    }
  });

  function closeNav() {
    sidebar.classList.remove('active');
    overlay.style.display = 'none';
    body.classList.remove('nav-open');
  }

  sidebar.addEventListener('wheel', (e) => {
    e.stopPropagation();
  });

  // drop down for service page 
  document.addEventListener("DOMContentLoaded", () => {
    const serviceDropdown = document.getElementById("serviceDropdown");
    const serviceMenu = serviceDropdown.nextElementSibling;

    serviceDropdown.addEventListener("click", (e) => {
      e.preventDefault();
      serviceMenu.style.display = serviceMenu.style.display === "block" ? "none" : "block";
    });

    // close when clicking outside
    document.addEventListener("click", (e) => {
      if (!serviceDropdown.parentElement.contains(e.target)) {
        serviceMenu.style.display = "none";
      }
    });
  });

</script>
